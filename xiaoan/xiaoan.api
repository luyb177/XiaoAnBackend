syntax = "v1"

info (
	title:   "小安API网关"
	version: "v1.0"
)

type (
	SendEmailRequest {
		email string `json:"email"`
	}
)

type (
	Response {
		code    int64       `json:"code"`
		message string      `json:"message"`
		data    interface{} `json:"data"`
	}
)

@server (
	prefix: /api/auth
	tags: "认证模块"
	group:  auth
)
service xiaoan {
	@doc "发送邮箱验证码"
	@handler SendEmail
	post /send-email (SendEmailRequest) returns (Response)
}

